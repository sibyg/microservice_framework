    <ServiceProvider
            id="Artemis JMS Resource Adapter"
            service="Resource"
            types="ArtemisMQResourceAdapter"
            class-name="org.apache.activemq.artemis.ra.ActiveMQResourceAdapter">
        ConnectorClassName = org.apache.activemq.artemis.core.remoting.impl.invm.InVMConnectorFactory
        ConnectionParameters = server-id=0
    </ServiceProvider>

    <ServiceProvider
            id="Artemis JMS Connection Factory"
            service="Resource"
            types="javax.jms.ConnectionFactory, javax.jms.QueueConnectionFactory, javax.jms.TopicConnectionFactory, QueueConnectionFactory, TopicConnectionFactory"
            class-name="org.apache.activemq.artemis.ra.ActiveMQRAManagedConnectionFactory">
        ResourceAdapter = Artemis JMS Resource Adapter

    </ServiceProvider>

    <ServiceProvider
            id="Default Queue"
            service="Resource"
            types="javax.jms.Queue, Queue, javax.jms.Destination"
            constructor="name"
            class-name="org.apache.activemq.artemis.jms.client.ActiveMQQueue">
        name
    </ServiceProvider>

    <ServiceProvider
            id="Artemis Topic"
            service="Resource"
            types="javax.jms.Topic, Topic, javax.jms.Destination"
            constructor="name"
            class-name="org.apache.activemq.artemis.jms.client.ActiveMQTopic">
        name
    </ServiceProvider>
</ServiceJar>
